<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey There,"
            android:textSize="26sp"
            style="@style/Bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Newty!"
            style="@style/Bold"
            android:layout_marginTop="5dp"
            android:drawableEnd="@drawable/ic_wave"
            android:drawablePadding="5dp"
            app:drawableTint="@color/sunshine_yellow" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Badger fetches your student information from the school's website and displays it here for analysis and everything nice!"
            style="@style/Light"
            android:layout_marginVertical="20dp"
            android:gravity="center"
             />


        <com.echoeyecodes.scrub.customviews.CustomEditText
            android:id="@+id/matric_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Matric Number"
            app:isSecure="false"
            app:form_type="matricnumber"
            app:inputType="0"
            />

        <com.echoeyecodes.scrub.customviews.CustomEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="Password"
            app:isSecure="true"
            app:form_type="password"
            app:inputType="3"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log In"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:layout_marginTop="50dp"
            />

    </LinearLayout>

</ScrollView>